<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module_40.ImagesPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" x:Name="ContentStackLayout">
            </StackLayout>
            <StackLayout Grid.Row="1" Orientation="Horizontal">
                <Button x:Name="OpenButton" Text="Открыть" IsEnabled="False" Clicked="OpenButtonClicked"/>
                <Button x:Name="DeleteButton"  Text="Удалить" IsEnabled="False" Clicked="DeleteButtonClicked"/>
            </StackLayout>
            
        </Grid>
        
        
    </ContentPage.Content>
</ContentPage>