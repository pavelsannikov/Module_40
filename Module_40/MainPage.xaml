<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module_40.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <Label x:Name="PincodeLabel" Text="ПИН-код не задан. Введите ПИН-код" FontSize="Title" Padding="30,10,30,10"/>
        <Entry x:Name="PasswordEntry" IsPassword="true" Placeholder="Password" IsTextPredictionEnabled="false" Completed="PincodeHandler" MaxLength="4" Keyboard="Numeric"/>
        <Button x:Name="OkButton" Text="OK" Clicked="PincodeHandler"/>
    </StackLayout>

</ContentPage>
